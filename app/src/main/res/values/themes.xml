<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SEL" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
    </style>

    <style name="TextLayoutBasicStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.SEL" parent="Base.Theme.SEL" />

    <style name="TextLayoutHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextLayoutDescriptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:textColor">@color/grey_1</item>
    </style>
    <style name="EditTextBaseStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppin_medium</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="hintTextColor">@color/grey_2</item>
        <item name="android:textColor">@color/black_1</item>

    </style>
    <style name="ButtonStyleMain" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <!--        <item name="android:paddingBottom">@dimen/spacing_5</item>-->
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>


</resources>